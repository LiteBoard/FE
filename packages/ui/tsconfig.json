{
  "extends": "@LiteBoard/typescript-config/react-library.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "outDir": "dist",
    "rootDir": "../../",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@ui": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src", ".storybook/stories"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"]
}
